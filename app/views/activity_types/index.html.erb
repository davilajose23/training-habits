<p id="notice"><%= notice %></p>

<row class="center right">
    <%= link_to 'New Activity', new_activity_type_path, :class => 'btn light-blue darken-3 white-text right-align' %>
</row>

<h5>Activity Types</h5>

<table class=" highlight striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Unit</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_types.each do |activity_type| %>
      <tr>
        <td><%= activity_type.name %></td>
        <td><%= activity_type.unit %></td>
        <td><%= @records.where(:activity_type => activity_type.id).sum(:quantity).to_s%> <%= activity_type.unit %></td>
        <td><%= link_to(raw("<i class='material-icons grey-text'>edit</i>"), edit_activity_type_path(activity_type)) %></td>
        <td><%= link_to(raw("<i class='material-icons grey-text'>delete</i>"), activity_type, method: :delete, data: { confirm: 'Are you sure?' }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


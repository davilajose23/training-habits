<%= form_with(model: activity_type, local: true) do |form| %>
  <% if activity_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(activity_type.errors.count, "error") %> prohibited this activity_type from being saved:</h2>

      <ul>
      <% activity_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, :required => true, :placeholder => 'Learn to play piano' %>
  </div>

  <div class="field">
    <%= form.label :unit %>
    <%= form.text_field :unit,  :required => true, :placeholder => 'minutes, km, hours' %>

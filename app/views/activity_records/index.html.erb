<p id="notice"><%= notice %></p>

<row class="center right">
    <%= link_to 'New record', new_activity_record_path, :class => 'btn light-blue darken-3 white-text right-align' %>
</row>
<h5>Activity Records</h5>
<table class=" highlight striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Activity type</th>
      <th>Description</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_records.each do |activity_record| %>
      <tr>
        <td><%= activity_record.date %></td>
        <td><%= activity_record.activity_type.name %></td>
        <td><%= activity_record.description %></td>
        <td><%= activity_record.quantity %> <%= activity_record.activity_type.unit %></td>
        <td><%= link_to(raw("<i class='material-icons grey-text'>edit</i>"), edit_activity_record_path(activity_record)) %></td>
        <td><%= link_to(raw("<i class='material-icons grey-text'>delete</i>"), activity_record, method: :delete, data: { confirm: 'Are you sure?' }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



    color: #0277bd ;
 }
</style>
<%= form_with(model: activity_record, local: true) do |form| %>
  <% if activity_record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(activity_record.errors.count, "error") %> prohibited this activity_record from being saved:</h2>

      <ul>
      <% activity_record.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.text_field :date, :class => 'datepicker', :required => true , :placeholder => 'Date of your activity'%>
  </div>

  <div id="answers" class="input-field field">    
    <%= form.collection_select(:activity_type_id ,ActivityType.all, :id, :name_and_quantity) %>
    <label>Select Activity Type</label>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, :required => true, :placeholder => 'running in central park' %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, :required => true, :placeholder => '30 (min)' %>
  </div>

  <div class="actions right">
    <%= form.submit :class => 'btn light-blue darken-3 white-text' %>
  </div>
<% end %>
